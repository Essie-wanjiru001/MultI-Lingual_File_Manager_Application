<!DOCTYPE html>
<html lang="<%= i18n.language %>">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/navreg.ejs') %>
    <div class="content">
        <h2><%= i18n.t('login') %></h2>
        <div class="create-form">
            <% if (messages.error) { %>
                <div class="error-message"><%= messages.error %></div>
            <% } %>
            
            <form action="/api/users/login" method="POST">
                <label for="email"><%= i18n.t('email') %></label>
                <input type="email" id="email" name="email" required>
                
                <label for="password"><%= i18n.t('password') %></label>
                <input type="password" id="password" name="password" required>
                
                <button type="submit"><%= i18n.t('login') %></button>
                <br>
                <br>
                <div class="link">
                    <p><%= i18n.t('dont_have_account') %> <a href="/register" class="link-form"><%= i18n.t('register_here') %></a></p>
                </div>
            </form>
        </div>
    </div>
    
    <%- include('./partials/footer.ejs') %>
</body>
</html>