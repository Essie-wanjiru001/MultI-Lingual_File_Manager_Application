<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Manager</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <nav>
        <h1>File Manager</h1>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/files">My Files</a></li>
            <li><a href="/logout">Logout</a></li>
            <li>
                <form id="languageForm">
                    <select id="languageSelect" name="language" onchange="changeLanguage()">
                        <option value="en">English</option>
                        <option value="es">Español</option>
                        <option value="fr">Français</option>
                        <option value="de">Deutsch</option>
                        <!-- Add more languages as needed -->
                    </select>
                </form>
            </li>
        </ul>
    </nav>

    <div class="content">
        <h2>Manage Your Files</h2>
        <form action="/api/files/upload" method="POST" enctype="multipart/form-data">
            <input type="file" name="file" required>
            <button type="submit">Upload File</button>
        </form>

        <h3>Files List</h3>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Size (bytes)</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% files.forEach(file => { %>
                    <tr>
                        <td><%= file.name %></td>
                        <td><%= file.size %></td>
                        <td><%= file.type %></td>
                        <td>
                            <a href="/api/files/<%= file.id %>" target="_blank">View</a>
                            <form action="/api/files/<%= file.id %>" method="POST" style="display:inline;">
                                <button type="submit" formaction="/api/files/<%= file.id %>" formmethod="DELETE">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <footer>
        <p>&copy; 2024 File Manager Application</p>
    </footer>

    <script>
        function changeLanguage() {
            document.getElementById('languageForm').submit();
        }
    </script>
</body>

</html>
