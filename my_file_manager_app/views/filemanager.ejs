<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Manager</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <h1>File Manager</h1>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/filemanager">My Files</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    <div class="content">
        <h2>File Manager</h2>

        <form id="uploadForm" action="/api/files/upload" method="POST" enctype="multipart/form-data">
            <input type="file" name="file" required>
            <button type="submit">Upload File</button>
        </form>

        <h3>Uploaded Files</h3>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Size</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="fileList">
                <% files.forEach(file => { %>
                    <tr>
                        <td><%= file.name %></td>
                        <td><%= file.size %> bytes</td>
                        <td><%= file.type %></td>
                        <td>
                            <a href="/api/files/<%= file.id %>" target="_blank">View</a>
                            <form action="/api/files/<%= file.id %>" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <footer>
        <p>&copy; 2024 File Manager Application</p>
    </footer>
</body>
</html>
